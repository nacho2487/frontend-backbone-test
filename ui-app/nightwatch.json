{
    "src_folders": "./tests/e2e/groups/",
    "output_folder": "./reports/e2e/",
    "globals_path": "./tests/e2e/globals.js",
    "page_objects_path": "./tests/e2e/pages/",

    "selenium": {
        "start_process": true,
        "server_path": "./node_modules/selenium-standalone/.selenium/selenium-server/2.45.0-server.jar",
        "cli_args": {
            "webdriver.chrome.driver": "./node_modules/selenium-standalone/.selenium/chromedriver/2.15-x64-chromedriver"
        }
    },

    "test_settings": {
        "default": {
            "skip_testcases_on_fail":false,
            "silent": true,
            "screenshots" : {
                "enabled" : true,
                "on_failure" : true,
                "on_error" : false,
                "path" : "./tests/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "chrome"
            }
        },

        "phantom": {
            "skip_testcases_on_fail":false,
            "screenshots" : {
                "enabled" : true,
                "on_failure" : true,
                "on_error" : true,
                "path" : "./tests/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "phantomjs",
                "phantomjs.binary.path": "./node_modules/phantomjs/bin/phantomjs"
            }
        },

        "nexus-5": {
            "silent": true,
            "skip_testcases_on_fail":false,
            "screenshots" : {
                "enabled" : true,
                "on_failure" : true,
                "on_error" : false,
                "path" : "./tests/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "mobileEmulation": {
                      "deviceName": "Google Nexus 5"
                    },
                    "args": ["incognito", "disable-extensions"]
                }
            }
        },

        "nexus-7": {
            "silent": true,
            "skip_testcases_on_fail":false,
            "screenshots" : {
                "enabled" : true,
                "on_failure" : true,
                "on_error" : false,
                "path" : "./tests/screenshots"
            },
            "desiredCapabilities": {
                "browserName": "chrome",
                "chromeOptions": {
                    "mobileEmulation": {
                        "deviceName": "Google Nexus 7"
                    },
                    "args": ["incognito", "disable-extensions"]
                }
            }
        },

        "saucelabs": {
            "skip_testcases_on_fail":false,
            "selenium_host": "ondemand.saucelabs.com",
            "selenium_port": 80,
            "username": "",
            "access_key": "",
            "use_ssl": false,
            "silent": true,
            "output": true,
            "screenshots": {
                "enabled": false,
                "path": ""
            },
            "desiredCapabilities": {
                "browserName": "chrome"
            },
            "globals": {
                "myGlobal": "some_sauce_global"
            },
            "selenium": {
                "start_process": false
            }
        }
    }
}
